{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Iniciar Uvicorn com Depurador",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--host",
                "localhost",
                "--port",
                "8080",
                "--reload"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        },
        
    ]
}
